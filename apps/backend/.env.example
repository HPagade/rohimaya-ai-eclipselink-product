# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000

# Database (PostgreSQL via Supabase or local)
DATABASE_URL=postgresql://postgres:password@localhost:5432/eclipselink_dev

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_change_in_production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_min_32_characters
REFRESH_TOKEN_EXPIRES_IN=30d

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_WHISPER_DEPLOYMENT=whisper-deployment-name
AZURE_OPENAI_GPT4_DEPLOYMENT=gpt-4-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Cloudflare R2 Storage (S3-compatible)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=eclipselink-audio-dev
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# OR use Upstash Redis
# UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
# UPSTASH_REDIS_REST_TOKEN=your_token

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=debug
