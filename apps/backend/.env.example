# ==============================================
# EclipseLink AI - Backend Environment Variables
# ==============================================

# Application
NODE_ENV=development
PORT=4000
APP_NAME=EclipseLink AI
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:3000

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_ACCESS_TOKEN_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_EXPIRES_IN=30d
JWT_ISSUER=eclipselink-api
JWT_AUDIENCE=eclipselink-frontend

# Azure OpenAI
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://YOUR_RESOURCE.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_WHISPER=whisper-1
AZURE_OPENAI_DEPLOYMENT_GPT4=gpt-4-32k
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Cloudflare R2 Storage
CLOUDFLARE_R2_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
CLOUDFLARE_R2_BUCKET_NAME=eclipselink-voice-recordings
CLOUDFLARE_R2_PUBLIC_URL=https://recordings.eclipselink.ai

# Redis (Upstash)
UPSTASH_REDIS_URL=redis://default:YOUR_PASSWORD@YOUR_ENDPOINT.upstash.io:6379
UPSTASH_REDIS_TOKEN=your_upstash_redis_token

# BullMQ (Redis-based queue)
REDIS_HOST=YOUR_ENDPOINT.upstash.io
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=true

# Email (SendGrid or similar)
EMAIL_FROM=noreply@eclipselink.ai
EMAIL_FROM_NAME=EclipseLink AI
SENDGRID_API_KEY=your_sendgrid_api_key

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=info
LOGTAIL_SOURCE_TOKEN=your_logtail_source_token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,https://app.eclipselink.ai
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=10
SESSION_TIMEOUT_MINUTES=60
MFA_ISSUER=EclipseLink AI

# Feature Flags
ENABLE_EHR_SYNC=false
ENABLE_VOICE_TRANSCRIPTION=true
ENABLE_SBAR_GENERATION=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false

# Development
DEBUG=false
PRETTY_LOGS=true
